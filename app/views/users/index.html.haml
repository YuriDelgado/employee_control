.col-md-8.col-md-offset-2
  %h2 Employees

  .panel.panel-default
    .panel-body
      %table.table.table-striped
        %thead
          %tr
            %th Name
            %th Email
            %th Status

        %tbody
          = render @users
      
      %h3.extra-margin-top Invite user
      = form_for(User.new, url: user_invitation_path, html: { class: 'form-inline' }) do |f|
        = f.text_field :email, placeholder: 'Email', label: false, class: 'form-control'
        .input-group-append
          = f.submit 'Invite', class: 'btn btn-outline-primary'
