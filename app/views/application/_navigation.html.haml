%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark{:style => "background-color: #71da71;"}
  %a.navbar-brand{:href => "/"} Navbar
  %button.navbar-toggler{"aria-controls" => "navbarNav", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNav", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarNav.collapse.navbar-collapse
    %ul.navbar-nav
      - if current_user && current_user.admin?
        %li.nav-item.active
          = link_to 'Employees', users_path, class: "nav-link"
    .navbar-text.ml-auto
      %ul.navbar-nav
        - if current_user
          %li.nav-item.dropdown
            %a#navbarDropdownMenuLink.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              #{current_user.name}
            .dropdown-menu.dropdown-menu-right.dropdown-menu-xs-left{"aria-labelledby" => "navbarDropdown"}
              = link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item text-dark"
              = link_to 'Logout', destroy_user_session_path, class: "dropdown-item text-dark", method: :delete
        - else
          %li.nav-item
            = link_to 'Login', user_session_path, class: "nav-link"